# Punch Configuration
# Copy this to .env and fill in your values

# Telegram Bot (get token from @BotFather, user ID from @userinfobot)
# PUNCH_TELEGRAM_TOKEN=your-bot-token-here
# PUNCH_TELEGRAM_USERS=123456789

# Web Dashboard
PUNCH_WEB_PORT=8080
# Set PUNCH_WEB_HOST=0.0.0.0 to allow Tailscale/network access (default: 127.0.0.1)
# PUNCH_WEB_HOST=0.0.0.0
# API key for dashboard auth (required when exposing to network)
# PUNCH_API_KEY=your-secret-key-here

# Claude Code
PUNCH_MAX_CONCURRENT=4

# Logging
PUNCH_LOG_LEVEL=INFO
